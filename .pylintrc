[MASTER]
ignore=tests,venv,build,dist,.pytest_cache
ignore-patterns=tests/.*,venv/.*,build/.*,dist/.*,.pytest_cache/.*

[MESSAGES CONTROL]
disable=line-too-long,mixed-line-endings,import-outside-toplevel,duplicate-code,too-many-instance-attributes,too-few-public-methods,too-many-return-statements,too-many-branches,too-many-locals,too-many-statements,unnecessary-pass,unnecessary-lambda,protected-access,global-statement,cell-var-from-loop,broad-exception-caught

[FORMAT]
max-line-length=100
